<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/singleTicketFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="20dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="30dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView10"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        app:cardCornerRadius="15dp"
        android:fontFamily="@font/nexa_light"
        android:textSize="18sp"
        android:layout_marginBottom="4dp"
        android:textAlignment="center"
        android:background="@color/app_color_yellow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/sfImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/app_color_yellow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/sfTittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_color"
        android:fontFamily="@font/nexa_font"
        android:textStyle="bold"
        android:textSize="24dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardView10" />


    <TextView
        android:id="@+id/sfType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textColor="@color/grey_color"
        android:fontFamily="@font/nexa_font"
        android:textSize="22sp"
        android:text="Type"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sfTittle" />

    <TextView
        android:id="@+id/sfPriority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_color"
        android:textStyle="bold"
        android:fontFamily="@font/nexa_font"
        android:textSize="22sp"
        android:layout_marginTop="20dp"
        android:text="Priority"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@id/sfType"
        app:layout_constraintTop_toBottomOf="@id/sfType" />

    <TextView
        android:id="@+id/sfEstimation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_color"
        android:textStyle="bold"
        android:fontFamily="@font/nexa_font"
        android:textSize="22sp"
        android:layout_marginTop="20dp"
        android:text="Estimation"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@id/sfPriority"
        app:layout_constraintTop_toBottomOf="@id/sfPriority" />

    <TextView
        android:id="@+id/sfLoggedTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_color"
        android:textStyle="bold"
        android:fontFamily="@font/nexa_font"
        android:textSize="22sp"
        android:inputType="number"
        android:layout_marginTop="20dp"
        android:text="Logged time"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@id/sfEstimation"
        app:layout_constraintTop_toBottomOf="@id/sfEstimation" />


    <TextView
        android:id="@+id/sfTicketDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_color"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:fontFamily="@font/nexa_font"
        android:textSize="22sp"
        android:text="Ticket description:"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@id/sfLoggedTime"
        app:layout_constraintTop_toBottomOf="@id/sfLoggedTime" />

    <TextView
        android:id="@+id/sfTypeValue"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/sfType" />

    <TextView
        android:id="@+id/sfPriorityValue"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/sfTypeValue"
        app:layout_constraintTop_toTopOf="@id/sfPriority" />

    <TextView
        android:id="@+id/sfEstimationValue"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/sfTypeValue"
        app:layout_constraintTop_toTopOf="@id/sfEstimation" />

    <TextView
        android:id="@+id/sfLoggedTimeValue"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/sfTypeValue"
        app:layout_constraintTop_toTopOf="@id/sfLoggedTime" />


    <TextView
        android:id="@+id/sfTicketDescValue"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/nexa_font"
        android:textSize="20dp"
        android:layout_marginRight="10dp"
        app:layout_constraintStart_toStartOf="@+id/sfTicketDesc"
        app:layout_constraintTop_toBottomOf="@id/sfTicketDesc" />



    <androidx.cardview.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="50dp"
        android:background="@color/app_color_yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <Button
        android:id="@+id/sfEditBtn"
        android:fontFamily="@font/nexa_font"
        android:textColor="@color/grey_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:background="@color/app_color_yellow"
        android:text="Edit"

        />
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>