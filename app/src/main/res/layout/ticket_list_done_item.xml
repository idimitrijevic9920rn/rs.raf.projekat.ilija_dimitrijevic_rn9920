<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginTop="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView9"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        app:cardCornerRadius="15dp"
        android:layout_marginBottom="4dp"
        android:textAlignment="center"
        android:background="@color/app_color_yellow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/doneTicketImage"
            android:background="@color/app_color_yellow"
            android:layout_width="100dp"
            android:layout_height="100dp"
            />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/doneTicketName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/nexa_font"
        app:layout_constraintTop_toTopOf="@id/cardView9"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/cardView9"/>

    <TextView
        android:id="@+id/doneTicketDescription"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:ems="2"
        android:gravity="start|top"
        android:textColor="@color/grey_color"
        android:fontFamily="@font/nexa_light"
        android:inputType="textMultiLine"
        app:layout_constraintStart_toStartOf="@id/doneTicketName"
        app:layout_constraintBottom_toBottomOf="@id/cardView9"
        />

</androidx.constraintlayout.widget.ConstraintLayout>